<!DOCTYPE html>
<html lang="eng">
  <!-- Head -->
  <%-include("templates/head.ejs")-%>  
  <body>
    <!-- Nav -->
    <%-include("templates/nav.ejs")-%>
    <!-- Page Content -->
    <div class="w3-main" style="margin-top: 85px">
      <!-- Products -->
      <section class="w3-row w3">
        <!-- Product -->
        <%if (products) {%>
          <%for(var i = 0; i < products.length; i++) {%>
            <article class="w3-col 13 s6">
              <div class="w3-container">
                <div class="w3-display-container">
                  <img style="width:100%" src=<%=products[i].item.image%>>
                  <div class="w3-display-middle w3-display-hover">
                    <a class="w3-button w3-black" href="/cart/remove-cart/<%=products[i].item.id%>">Remove From Cart</a>
                  </div>
                </div>  
                <p><%=products[i].item.title%><br><b>£<%=products[i].price%></b><p><%=products[i].qty%></p></p>
              </div>
            </article>
          <%}%>
        <%}%>
      </section>        
      <%if (products) {%>
        <div>
            <h1>£<%=total%></h1>
        </div>
      <%}%>
      <div>
        <a class="w3-button w3-black" href="/cart/empty-cart">Clear Cart</a>
      </div>
    </div>
  </body>
</html>