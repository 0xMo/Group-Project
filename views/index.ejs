              <div class="w3-display-container">
                <img style="width:100%" src=<%=products[i].image%>>
                <div class="w3-display-middle w3-display-hover">
                  <a class="w3-button w3-black" href="/add-cart/<%=products[i].id%>">Add to Cart</a>
                </div>
              </div>  
              <p><%=products[i].title%><br><b>Â£<%=products[i].price%></b></p>
            </div>
          </article>
        <%}%>
      </section>
  </body>
