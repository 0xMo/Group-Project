<!DOCTYPE html>
<html lang="eng">
  <%-include("templates/head.ejs")-%>
  <body>
    <!--Nav bar-->
    <%-include("templates/nav.ejs")-%>
    <!--Page Content-->
    <div class="w3-main" style="margin-top: 85px">

      <p style="margin-left:25px"><%if (searched) {%>
                                    Result for: <%=searched%>
                                  <%} else {
                                    %>Total Products: <%=products.length%>
                                  <%}%>
      </p>
      <!--Product grid-->
      <div class="w3-row w3">
        <!--Product-->
        <%for(var i = 0; i < products.length; i++) {%>
        <div class="w3-col l3 s6">
          <div class="w3-container">
            <div class="w3-display-container">
              <img style="width:100%;" src=../<%=products[i].image%>>
              <div class="w3-display-middle w3-display-hover">
                <%if (admin) {%>
                  <a class="w3-button w3-red" href="/removeItem/<%=products[i].id%>">Remove item <i class="fa fa-trash"></i></a>
                <%} else {%>
                  <a class="w3-button w3-black" href="/add-cart/<%=products[i].id%>">Add to cart <i class="fa fa-shopping-cart"></i></a>
                <%}%>
              </div>
            </div>
            <p><%=products[i].title%><br><b>Â£<%=products[i].Price%></b></p>
          </div>
        </div>
        <%}%>
      </div>
    </div>
  </body>
  <%-include("templates/footer.ejs")-%>
</html>
